{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "bootstrap": {
      "nohoist": "webapp"
    },
    "version": {
      "conventionalCommits": true,
      "changelogPreset": {
        "name": "conventional-changelog-conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "🚀 Features"
          },
          {
            "type": "fix",
            "section": "🐛 Bug Fixes"
          },
          {
            "type": "chore",
            "hidden": true
          },
          {
            "type": "test",
            "hidden": true
          },
          {
            "type": "refactor",
            "hidden": true
          }
        ]
      }
    }
  }
}
